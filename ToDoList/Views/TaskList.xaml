<?xml version="1.0" encoding="utf-8" ?>
<!-- Add Title Dynamically using the Title of the to do -->
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ToDoList.Maui.Views.TaskList"
    Title="{Binding Name}"
>
<StackLayout>
    <ListView
        BackgroundColor="Transparent"
        RowHeight="100"
        SeparatorColor="Transparent"
        x:Name="Tasks"
        ItemSelected="Task_ItemSelected"
        ItemTapped="Task_ItemTapped"
        
    >
    <ListView.ItemTemplate>
        <DataTemplate>
            <ViewCell>
                <StackLayout>
                   <!-- <CheckBox>
                    
                   </CheckBox> -->
                    <Label Margin="12,15,0,0" FontSize="20" TextColor="White" Text="{Binding Duty}"  />
                    <Label Margin="12,15,0,0" FontSize="20" TextColor="White" Text="Done/Not Done here" />
                    

                </StackLayout>
            </ViewCell>
        </DataTemplate>
    </ListView.ItemTemplate>
    
    </ListView>
    <Button   
    BackgroundColor="#512BD4"  
    HorizontalOptions="End" 
    VerticalOptions="End" 
    x:Name="AddTaskBtn"  
    Clicked="AddTaskBtn_Clicked" 
    Margin="0,0,10,10" 
    >
    <Button.ImageSource>
        <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe145;"/>
    </Button.ImageSource>
    </Button>
</StackLayout>
</ContentPage>